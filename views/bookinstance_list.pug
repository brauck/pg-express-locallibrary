extends layout

block content
  h1= title

  ul
    each val in bookinstance_list
      li
        a(href=bookinstanceUrl(val.id)) #{val.title} : #{val.imprint} -
        if val.current_status=='Available'
          span.text-success #{val.current_status}
        else if val.current_status=='Maintenance'
          span.text-danger #{val.current_status}
        else
          span.text-warning #{val.current_status}
        if val.current_status!='Available'
          span  (Due: #{toYYYMMDDformat(val.due_back)} )

    else
      li There are no book copies in this library.

